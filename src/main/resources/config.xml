<configuration>
    <inputPath>./input/</inputPath>                 <!-- Specifies the directory path where input files are located. -->
    <outputPath>./output/</outputPath>              <!-- Specifies the directory path where output files should be placed. -->
    <allowedExtensions>                             <!-- Defines a list of file extensions that are allowed to be processed. -->
        <extension>.in</extension>
        <extension>.txt</extension>
    </allowedExtensions>

    <targetSpecificLevel>99</targetSpecificLevel>  <!-- (Optional) Specifies a target level. This is specific for CCC (level<number>.in files). The format '<number>e' indicates the number part and an 'e' (both optional). If 'e' is present only example files are considered. Number -1 represents all levels.-->
    <cleanupOutput>true</cleanupOutput>             <!-- (Optional) A boolean value indicating whether the output directory should be cleaned up (i.e., existing files removed) before writing new output files. -->
    <logLevel>INFO</logLevel> <!--(Optional) The log level indicating what information is logged. Valid values are: ALL, INFO, FINE, FINER, OFF-->

    <visualizer>
        <enabled>false</enabled>
        <headless>true</headless>
        <visualizerPath>./input/visualizer.html</visualizerPath>
        <elementLocators>
            <inputLocator>#levelInput</inputLocator>
            <outputLocator>#levelSolution</outputLocator>
            <statusLocator>#spanStatus</statusLocator>
            <infoLocator>#spanStatusMessage</infoLocator>
        </elementLocators>
    </visualizer>
</configuration>